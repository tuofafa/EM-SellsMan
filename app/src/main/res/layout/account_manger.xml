<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="#FFFFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="账号管理"
            android:gravity="center"
            android:textSize="@dimen/sp_19"
            android:textColor="#FF333333"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/modify_pwd_account_manger"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF999999"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:textSize="@dimen/sp_15"
                android:textColor="#FF333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiangyou"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_31"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_marginRight="@dimen/dp_31"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/but_shape"
            android:text="切换账号"
            android:stateListAnimator="@null"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/register_account_manger"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_marginRight="@dimen/dp_31"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_account_manger"
            android:text="注销登录"
            android:stateListAnimator="@null"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/logout_account_manger"/>
    </LinearLayout>


</LinearLayout>