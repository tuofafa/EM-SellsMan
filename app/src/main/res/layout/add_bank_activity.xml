<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8fa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="#FFFFFF"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bank_title"
            android:textSize="@dimen/sp_19"
            android:gravity="center"
            android:textColor="#333333"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="持卡人"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_15"/>
            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入持卡人姓名"
                android:textSize="@dimen/sp_14"
                android:textColorHighlight="#999999"
                android:textColor="#333333"
                android:id="@+id/card_name"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_14"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_0_5"
            android:background="#E5E5E5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="身份证"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>
            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入证件号码"
                android:textSize="@dimen/sp_14"
                android:textColorHighlight="#FF999999"
                android:textColor="#FF333333"
                android:id="@+id/card"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_14"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#E5E5E5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="银行卡号"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>
            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入银行卡号"
                android:textSize="@dimen/sp_14"
                android:textColorHighlight="#FF999999"
                android:textColor="#FF333333"
                android:id="@+id/back_card"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_14"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#E5E5E5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="银行类型"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:entries="@array/backs"
                android:id="@+id/back_type"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#E5E5E5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="开户地区"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入开户行地区"
                android:textSize="@dimen/sp_14"
                android:textColorHighlight="#FF999999"
                android:textColor="#FF333333"
                android:id="@+id/card_add"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_14"
                android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="@dimen/dp_31"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确认添加"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/but_shape"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/add_card_but"/>
    </LinearLayout>

</LinearLayout>