<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/app_update_tishi_bg"
    android:background="@drawable/app_update_bg">

    <LinearLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_270"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/app_update_img"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/upgrade"/>
        </LinearLayout>

        <TextView
            android:id="@+id/app_update_dialog_text"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新版本 v 1.4.0"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="#666666"
            android:text="1. 优化了产品体验"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. 修复了部分bug "
            android:textSize="@dimen/sp_13"
            android:textColor="#666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. 新增了一些功能"
            android:textSize="@dimen/sp_13"
            android:textColor="#666666"/>

        <TextView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="@dimen/dp_188"
            android:layout_height="@dimen/dp_36"
            android:text="立即更新"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:background="@drawable/app_update_but"
            android:textStyle="bold"
            android:id="@+id/qucliy_update_app"
            android:enabled="true"/>

    </LinearLayout>
</LinearLayout>