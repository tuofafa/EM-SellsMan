<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="分类"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/sousuo" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15">

                <TextView
                    android:id="@+id/home_frg_menu_all_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选产品"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_all_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_28">

                <TextView
                    android:id="@+id/home_frg_menu_jiayong_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家用产品"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_jiayong_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_fangyi_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="防疫物资"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_fangyi_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_kouqiang_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="口腔专区"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_kouqiang_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_haocai_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="耗材专区"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_haocai_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_yanke_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="眼科专区"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_yanke_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_jijiu_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="急救专区"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_jijiu_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7"/>
            </LinearLayout>
           <!-- android 通过后端传递的数据个数动态的创建item-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_shouyong_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兽用专区"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_shouyong_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_28"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_frg_menu_shiyanshi_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实验室"
                    android:textColor="@drawable/home_menu_select_text"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/home_text_shiyanshi_xiahuaxian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_7" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/sp_List"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="10">
    </FrameLayout>

</LinearLayout>