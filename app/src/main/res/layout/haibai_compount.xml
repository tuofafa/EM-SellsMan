<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="生成海报"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp_19"
            android:textColor="#333333"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分享"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:id="@+id/share_hb"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="#FFE5E5E5">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/test"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_422"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="4">

                <ImageView
                    android:id="@+id/haibao_zhutu_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/haibao_insturctions"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_13"
                    android:maxLines="2"
                    android:maxEms="17"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/haibao_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="￥30.00"
                    android:textColor="#ff7a16"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/haibao_touxiang"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/haibao_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="医麦合伙人"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="为您推荐了一件商品"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/haibao_qercode"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>