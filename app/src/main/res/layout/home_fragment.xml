<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_102"
        android:background="@mipmap/home_frg_navgtion"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="医麦合伙人"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/home_msg"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/home_sousuo"
            android:gravity="center"
            android:id="@+id/home_frg_sousuolan">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/home_frg_sousuo"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入商品名称或关键字搜索"
                android:textSize="@dimen/sp_14"
                android:textColor="#CCCCCC"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_356"
                android:background="@mipmap/home_frg_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">
                    <!--  轮播图  -->
                    <com.youth.banner.Banner
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/banner">
                    </com.youth.banner.Banner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30">
                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_jiayong_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_jiayong"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="家用产品"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_fangyi_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_fangyi"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="防疫物资"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_kouqiang_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_kouqiang"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="口腔专区"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_haocai_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_haocai"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="耗材专区"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20">
                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_yanke_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_yanke"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="眼科专区"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_jijiu_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_jijiu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="急救专区"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_shiyanshi_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/home_shiyanshi"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实验室"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/home_frg_jd_pr">
                            <ImageView
                                android:layout_width="@dimen/dp_49"
                                android:layout_height="@dimen/dp_49"
                                android:src="@mipmap/jd"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="京东大卖场"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_13"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="每日精选"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="精选推荐，高额佣金"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#999999"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container_view"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>