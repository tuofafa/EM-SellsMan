<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205">
        <LinearLayout
            android:background="@mipmap/backgroup"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/log"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi~ 欢迎使用医麦合伙人端"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_20"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/yzm_login">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码登录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:id="@+id/yzm_login_text"/>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_2"
                android:id="@+id/yzm_login_xhx"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/pwd_login">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码登录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:id="@+id/pwd_login_text"/>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_2"
                android:id="@+id/pwd_login_xhx"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_33"
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>