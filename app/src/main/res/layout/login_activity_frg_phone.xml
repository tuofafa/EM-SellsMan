<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/phonenum"/>
                <EditText
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:hint="请输入手机号"
                    android:id="@+id/log_password"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FF333333"
                    android:textColorHint="#C2C2C2"
                    android:singleLine="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFDBDBDB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/goods_details_tuwen"
            android:gravity="center">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#06C061"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"/>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/vali"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:id="@+id/log_username"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:textColorHint="#C2C2C2"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFDBDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>



    <Button
        android:layout_marginTop="@dimen/dp_28"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@drawable/but_shape"
        android:text="立即登录"
        android:textSize="@dimen/sp_14"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码"
            android:textSize="@dimen/sp_10"
            android:textColor="#C2C2C2"
            />
        <TextView
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_10"
            android:textColor="#C2C2C2"
            android:text="没有账号？立即注册"/>

    </LinearLayout>




</LinearLayout>