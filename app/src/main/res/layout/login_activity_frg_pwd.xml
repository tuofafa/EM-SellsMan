<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/username"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:id="@+id/pwd_login_account"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:textColorHint="#C2C2C2"
                android:singleLine="true"
                android:numeric="integer"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFDBDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/pwd"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:hint="请输入密码"
                android:id="@+id/pwd_login_passwrod"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:textColorHint="#C2C2C2"
                android:singleLine="true"
                android:password="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:id="@+id/pwd_yanjing_state">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/biyan"
                    android:id="@+id/pwd_yanjing"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFDBDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dp_28"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@drawable/but_shape"
        android:text="立即登录"
        android:textSize="@dimen/sp_14"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:id="@+id/pwd_login_btn"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码"
            android:textSize="@dimen/sp_10"
            android:textColor="#C2C2C2"
            android:id="@+id/pwd_forword_password"/>
        <TextView
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_10"
            android:textColor="#C2C2C2"
            android:text="没有账号？立即注册"
            android:id="@+id/pwd_register"/>

    </LinearLayout>




</LinearLayout>