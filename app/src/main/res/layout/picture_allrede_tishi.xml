<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_211"
        android:layout_height="@dimen/dp_206"
        android:background="@drawable/app_update_bg"
        android:orientation="vertical">

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="去群聊/朋友圈分享"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_29"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_33"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dui"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文字已自动复制"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dui"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片已批量下载"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"/>
        </LinearLayout>

        <TextView
            android:id="@+id/picture_tishi_know"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_36"
            android:gravity="center"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_34"
            android:text="我知道了"
            android:background="@drawable/app_update_but"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_13"
            android:clickable="true"/>

    </LinearLayout>


</LinearLayout>