<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2"
        android:background="@mipmap/backgroup">
        <LinearLayout
            android:background="@mipmap/backgroup"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/log"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi~ 欢迎使用医麦合伙人端"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_20"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/sp_20">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="用户注册"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:orientation="vertical"
                android:layout_weight="11">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/dp_5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_17"
                            android:layout_gravity="center"
                            android:background="@mipmap/username"/>

                        <EditText
                            android:id="@+id/reg_username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入登录用户名"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginLeft="@dimen/dp_9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="-3dp"
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_5">

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_35">
                       <LinearLayout
                           android:layout_width="@dimen/dp_0"
                           android:layout_height="match_parent"
                           android:layout_weight="0.5">

                           <ImageView
                               android:layout_width="@dimen/dp_16"
                               android:layout_height="@dimen/dp_17"
                               android:layout_gravity="center"
                               android:background="@mipmap/phonenum" />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="@dimen/dp_0"
                           android:layout_height="match_parent"
                           android:layout_weight="5"
                           android:layout_marginLeft="@dimen/dp_9">
                           <EditText
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:hint="请输入手机号"
                               android:background="@null"
                               android:id="@+id/reg_phone_num"
                               android:textSize="@dimen/sp_15"/>
                       </LinearLayout>
                       <LinearLayout
                           android:gravity="center_vertical"
                           android:layout_width="@dimen/dp_0"
                           android:layout_height="match_parent"
                           android:layout_weight="2">
                           <Button
                               android:layout_width="wrap_content"
                               android:layout_height="@dimen/dp_25"
                               android:text="获取验证码"
                               android:textColor="#FF06C061"
                               android:background="@drawable/send_phonenum"
                               android:id="@+id/reg_send_phonenum"
                               android:textSize="@dimen/sp_12"/>
                       </LinearLayout>
                   </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="-3dp"
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/dp_5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_17"
                            android:layout_gravity="center"
                            android:background="@mipmap/vali"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入验证码"
                            android:background="@null"
                            android:id="@+id/reg_input_yzm"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginLeft="@dimen/dp_9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="-3dp"
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/dp_5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_17"
                            android:layout_gravity="center"
                            android:background="@mipmap/pwd"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入6-20位登录密码"
                            android:background="@null"
                            android:id="@+id/reg_pwd"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginLeft="@dimen/dp_9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="-3dp"
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/dp_5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_17"
                            android:layout_gravity="center"
                            android:background="@mipmap/pwd"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="密码确认"
                            android:background="@null"
                            android:id="@+id/reg_pwd_qr"
                            android:textSize="@dimen/sp_15"
                            android:layout_marginLeft="@dimen/dp_9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="-3dp"
                        android:background="#e2e2e2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center">
                    <Button
                        android:background="@drawable/but_shape"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:text="立即注册"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:id="@+id/register_but"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="0.8"
                    android:layout_marginTop="@dimen/dp_10">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="注册即代表同意"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="《医麦合伙人端协议》"
                            android:textColor="#00cc66"
                            android:id="@+id/reg_xieyi"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="0.8">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>