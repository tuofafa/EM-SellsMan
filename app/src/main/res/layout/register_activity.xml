<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205"
        android:background="@mipmap/backgroup"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/log" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_7"
            android:text="Hi~ 欢迎使用医麦合伙人端"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_33">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/phonenum"/>
                <EditText
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:hint="请输入手机号"
                    android:id="@+id/reg_phone_num"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FF333333"
                    android:textColorHint="#C2C2C2"
                    android:singleLine="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFDBDBDB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/goods_details_tuwen"
            android:gravity="center"
            android:id="@+id/reg_send_phonenum">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#06C061"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:id="@+id/register_login_send_text"/>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/vali"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:id="@+id/reg_input_yzm"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:textColorHint="#C2C2C2"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFDBDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/pwd"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:hint="请输入6-20位登录密码"
                android:id="@+id/reg_pwd"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:textColorHint="#C2C2C2"
                android:singleLine="true"
                android:password="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/biyan"
                    android:id="@+id/yanjian_repwd_state"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFDBDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/pwd"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:hint="确认密码"
                android:id="@+id/reg_pwd_qr"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="#FF333333"
                android:textColorHint="#C2C2C2"
                android:singleLine="true"
                android:password="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom">
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/biyan"
                    android:id="@+id/yanjian_repwd_queren_state"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFDBDBDB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>

    <Button
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_28"
        android:id="@+id/register_but"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@drawable/but_shape"
        android:stateListAnimator="@null"
        android:text="立即注册"
        android:textColor="#FFF"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册即代表同意《医麦合伙人端注册协议》"
        android:id="@+id/reg_xieyi"
        android:textSize="@dimen/dp_10"/>


</LinearLayout>