<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205">
        <LinearLayout
            android:background="@mipmap/backgroup"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/log"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi~ 欢迎使用医麦合伙人端"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_20"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_34"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/phonenum"/>
                    <EditText
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:hint="请输入手机号"
                        android:numeric="integer"
                        android:id="@+id/repwd_account"
                        android:background="@null"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#FF333333"
                        android:textColorHint="#C2C2C2"
                        android:singleLine="true"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#FFDBDBDB"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/goods_details_tuwen"
                android:gravity="center"
                android:id="@+id/repwd_send_yzm_state">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="#06C061"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:id="@+id/repwd_send_yzm_text"/>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/vali"/>
                <EditText
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:id="@+id/repwd_yanzhengma"
                    android:background="@null"
                    android:numeric="integer"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FF333333"
                    android:textColorHint="#C2C2C2"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFDBDBDB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/pwd"/>
                <EditText
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:hint="请输入6-20位新密码"
                    android:id="@+id/repwd_passwrod"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FF333333"
                    android:textColorHint="#C2C2C2"
                    android:singleLine="true"
                    android:password="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:id="@+id/repwd_yanjing_state">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_10"
                        android:src="@mipmap/biyan"
                        android:id="@+id/repwd_yanjing"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFDBDBDB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="@dimen/dp_28"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/but_shape"
            android:text="重置密码"
            android:textSize="@dimen/sp_14"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/repwd_btn"
            android:stateListAnimator="@null"/>
    </LinearLayout>





</LinearLayout>