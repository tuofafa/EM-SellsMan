<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="生成海报"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp_19"
            android:textColor="#333333"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分享"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:id="@+id/qg_share_menu"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="#FFE5E5E5"/>

    <LinearLayout
        android:id="@+id/qg_share_view_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_350"
            android:background="@mipmap/tg_share_bg"/>
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_92"
            android:background="#FFF">
            <LinearLayout
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/qg_share_tuoxiang"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_55"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医麦合伙人"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:id="@+id/qg_share_nickname"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:text="邀请您来医麦网挑选需要的医疗设备"
                    android:textSize="@dimen/sp_10"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_82"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/qg_share_erweima"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    
    

</LinearLayout>